<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="1dp"
    >

    <RelativeLayout
        android:id="@+id/relative_layout_file"
        android:layout_width="match_parent"
        android:layout_height="157dp">

        <ImageView
            android:id="@+id/image_player"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/textPlacar1"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="7dp"/>


        <ImageView
            android:id="@+id/image_team_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/textPlacar2"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="7dp"/>

        <TextView
            android:id="@+id/textX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="X"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textPlacar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            android:layout_toEndOf="@+id/image_player"
            android:text="2"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/textPlacar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="60dp"
            android:layout_toStartOf="@+id/image_team_2"
            android:text="3"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/textLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:text="local" />

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="date" />

        <TextView
            android:id="@+id/textHouseTeamName"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/image_player"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/textVisitantTeamName"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/image_team_2"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="TextView" />

    </RelativeLayout>
</android.support.v7.widget.CardView>